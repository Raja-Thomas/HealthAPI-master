@model ClientApp.Models.Employees

@if (Model.Id > 0)
{
    <div class="modal-header">
        <h5> UPDATE ACCOUNT</h5>
    </div>

}
else
{
    <div class="modal-header">
        <h5> ADD ACCOUNT</h5>
    </div>

}

<div class="modal-body">
    <form id="frmClient">
        <p>Please fill in this form to create or update an account!</p>
        <hr>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.TextBoxFor(item => item.firstName, new { id = "firstName", @class = "form-control", placeholder = "FIRST NAME" })
                    @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.TextBoxFor(item => item.lastName, new { id = "lastName", @class = "form-control", placeholder = "LAST NAME" })
                    @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.TextBoxFor(item => item.nickName, new { id = "nickName", @class = "form-control", placeholder = "NICK NAME" })
                    @Html.ValidationMessageFor(model => model.nickName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.TextBoxFor(item => item.mobile, new { id = "mobile", @class = "form-control", placeholder = "MOBILE" })
                    @Html.ValidationMessageFor(model => model.mobile, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.TextBoxFor(item => item.Email, new { id = "email", @class = "form-control", placeholder = "EMAIL" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.TextBoxFor(item => item.city, new { id = "city", @class = "form-control", placeholder = "CITY" })
                    @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.TextBoxFor(item => item.State, new { id = "state", @class = "form-control", placeholder = "STATE" })
                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.TextBoxFor(item => item.country, new { id = "country", @class = "form-control", placeholder = "COUNTRY" })
                    @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger" })
                </div>
               
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.TextBoxFor(item => item.Address, new { id = "address", @class = "form-control", placeholder = "ADDRESS" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        @if (Model.Id == 0)
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.PasswordFor(item => item.Password, new { id = "password", @class = "form-control", placeholder = "PASSWORD", @value = Model.Password })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.PasswordFor(item => item.ConfirmPassword, new { id = "confirmpassword", @class = "form-control", placeholder = "CONFIRM PASSWORD", @value = Model.Password })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }

        <div class="form-group">
            @Html.HiddenFor(item => item.Id, new { id = "firstId", @class = "form-control", placeholder = "Id" })
        </div>
        @if (Model.Id > 0)
        {
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="UpdateContact();">Update</button>
                <button type="button" class="btn btn-primary"
                        data-dismiss="modal">
                    Close
                </button>
            </div>
        }
        else
        {
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="return Add();">CREATE</button>
                <button type="button" class="btn btn-primary"
                        data-dismiss="modal">
                    Close
                </button>
            </div>

        }
    </form>
</div>

